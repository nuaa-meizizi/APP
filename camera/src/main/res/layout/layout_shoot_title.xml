<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cameraTopLayout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
   >
    <!-- 闪光灯开关-->
    <ImageView
        android:id="@+id/openFlashImg"
        android:layout_width="18.7dp"
        android:layout_height="22.7dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:visibility="gone"
        android:src="@drawable/selected_icon_flash" />

    <!-- 摄像头切换按钮-->
    <ImageView
        android:id="@+id/cameraSwitchBtn"
        android:layout_width="24dp"
        android:layout_height="20.3dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/openFlashImg"
        android:background="@color/color_00"
        android:layout_marginLeft="36.3dp"
        android:visibility="gone"
        android:src="@drawable/button_icon_camera" />

    <!-- 关闭按钮-->
    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/color_00"
        android:src="@drawable/button_icon_photo_close" />

</RelativeLayout>